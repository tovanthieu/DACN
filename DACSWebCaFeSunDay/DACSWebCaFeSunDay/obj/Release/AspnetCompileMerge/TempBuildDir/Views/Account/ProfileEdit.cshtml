@model DACSWebCaFeSunDay.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Profile";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    .news_section_container {
        margin-top: 180px
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .row-item-new {
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        @using (Html.BeginForm("PostProfile", "Account"))
        {
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()
            <div class="col-md-12">

                <div class="form-group">
                    <label for="exampleInputEmail1">Tên đầy đủ</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="FullName" value="@Model.FullName">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Tên tài khoản</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Số điện thoại</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email" readonly>
                </div>

                <div class="form-group">
                    <a href="/Account/Profile" class="btn btn-success">Quay Lại </a>
                    <button type="submit" class="btn btn-success">Cập nhật</button>

                </div>
            </div>
        }

    </div>
</div>

