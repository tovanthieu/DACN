@model DACSWebCaFeSunDay.Models.ChangePasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đổi Mật Khẩu</title>
    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f5f5f5; /* Màu nền chung của trang web */
        }

        .form-container {
            width: 400px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #4d2a0e; /* Màu chữ cho tiêu đề */
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
                color: #4d2a0e; /* Màu chữ cho label */
            }

            .form-group input {
                width: 100%;
                padding: 8px;
                box-sizing: border-box;
                border: 1px solid #ccc;
            }

            .form-group .btn {
                width: 100%;
                padding: 10px;
                background-color: #4d2a0e; /* Màu nền cho nút */
                color: #fff; /* Màu chữ cho nút */
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

            .form-group .btn-back {
                margin-top: 10px;
                background-color: #f0f0f0;
                color: #4d2a0e; /* Màu chữ cho nút Quay Lại */
                text-decoration: none;
                padding: 8px;
                display: inline-block;
                border-radius: 4px;
            }

                .form-group .btn:hover,
                .form-group .btn-back:hover {
                    background-color: #2c1704; /* Màu nền khi di chuột qua nút */
                }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Đổi Mật Khẩu</h2>

        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-outline-dark" value="Đổi Mật Khẩu" />
                <a href="/Account/Profile" class="btn btn-back">Quay Lại </a>
            </div>
        }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
