@model DACSWebCaFeSunDay.Models.ForgotPasswordViewModel
@{
    Layout = null;
}
@using DACSWebCaFeSunDay.Common
<link rel="shortcut icon" type="image/png" href=@SettingHelper.GetValue("SettingLoGo") />
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    /* main_styles.css */

    body {
        font-family: 'Arial', sans-serif;
        background-color: #D2B48C;
    }

    .header1 {
        text-align: center;
        margin-top: 50px;
        background-color: #D2B48C;
    }

    main {
        max-width: 400px;
        margin: auto;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
    }

    h4 {
        color: #888;
        margin-top: 0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-confirm {
        background-color: #007bff;
        color: #fff;
    }
</style>
<div class="header1">
    <div class="container" style="margin-top: 100px;">
        <main aria-labelledby="title">
            <h2 id="title">@ViewBag.Title</h2>
            <h4>Lưu Ý: Khách Hàng Phải Kích Hoạt Tài Khoản Khi Đăng Ký để lấy lại mật khẩu</h4>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group row">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="offset-md-2 col-md-10">
                        <input type="submit" class="btn btn-confirm" value="Xác Nhận" />
                        <a href="/account/login" class="btn btn-outline-dark">Quay lại đăng nhập</a>
                    </div>
                </div>
            }
        </main>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
