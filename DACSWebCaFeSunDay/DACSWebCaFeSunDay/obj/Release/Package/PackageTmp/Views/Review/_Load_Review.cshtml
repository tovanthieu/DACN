@model IEnumerable<DACSWebCaFeSunDay.Models.EF.ReviewProduct>

<div class="tab_title reviews_title">
    <h4>Reviews (@ViewBag.Count)</h4>
</div>

<!-- User Review -->
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <div class="user_review_container d-flex flex-column flex-sm-row">

            <div class="review">
                <div class="review_date">@item.CreatedDate.ToString("dd MM yyyy")</div>
                <div class="user_name">@item.FullName</div>
                <div class="star_rating">
                    @Html.Raw(DACSWebCaFeSunDay.Common.Common.HtmlRate(item.Rate))
                </div>
                <p>@item.Content</p>
            </div>
        </div>


    }

}
